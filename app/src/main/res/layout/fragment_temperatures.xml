                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:autoSizeMaxTextSize="25sp"
                            android:autoSizeMinTextSize="15sp"
                            android:autoSizeStepGranularity="2sp"
                            android:autoSizeTextType="uniform"
                            android:gravity="center"
                            android:textAlignment="center"
                            app:layout_constraintBottom_toTopOf="@+id/coolantTemp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.cardiomood.android.controls.gauge.SpeedometerGauge
                            android:id="@+id/coolantTemp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:padding="8dp"
                            app:layout_constraintBottom_toTopOf="@+id/textView_CoolantTemp"
                            app:layout_constraintEnd_toEndOf="@+id/textView_CoolantTempTitle"
                            app:layout_constraintStart_toStartOf="@+id/textView_CoolantTempTitle"
                            app:layout_constraintTop_toBottomOf="@+id/textView_CoolantTempTitle"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/textView_CoolantTemp"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:autoSizeMaxTextSize="25sp"
                            android:autoSizeMinTextSize="15sp"
                            android:autoSizeStepGranularity="2sp"
                            android:autoSizeTextType="uniform"
                            android:gravity="center"
                            android:textAlignment="center"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/coolantTemp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

